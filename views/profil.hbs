  <section class="mb-5" id="kullanıcı-modül-bilgileri">


    <div class="profile-modules-main-wrapper overflow-x-hidden">






      <button class="section-toggle wow fadeIn" data-bs-toggle="collapse" data-bs-target="#project-sticky-super"
        aria-expanded="false" aria-controls="section-content">
        <span class="toggle-label">Proje Kütüphanesine Eklenen Projeler</span>
        <i class="bi bi-chevron-down toggle-icon"></i>
      </button>


      <div id="project-sticky-super" class="project-sticky-super collapse mt-3">


        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pills-uretim-tab" data-bs-toggle="pill" data-bs-target="#pills-uretim"
              type="button" role="tab" aria-controls="pills-uretim" aria-selected="true">Üretim</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-arge-tab" data-bs-toggle="pill" data-bs-target="#pills-arge"
              type="button" role="tab" aria-controls="pills-arge" aria-selected="false">Arge</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-hizmet-tab" data-bs-toggle="pill" data-bs-target="#pills-hizmet"
              type="button" role="tab" aria-controls="pills-hizmet" aria-selected="false">Hizmet</button>
          </li>

          <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-kss-tab" data-bs-toggle="pill" data-bs-target="#pills-kss" type="button"
              role="tab" aria-controls="pills-kss" aria-selected="false">Kurumsal Sosyal Sorumluluk</button>
          </li>

          <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-all-tab" data-bs-toggle="pill" data-bs-target="#pills-all" type="button"
              role="tab" aria-controls="pills-all" aria-selected="false">Tüm Projeler</button>
          </li>


        </ul>
        <div class="tab-content" id="pills-tabContent">
          <div class="tab-pane fade show active project-sticky-wrapper" id="pills-uretim" role="tabpanel"
            aria-labelledby="pills-uretim-tab" tabindex="0">

            {{#if unique_projeler}}

            <ul class="sticky-list">
              {{#each unique_projeler as |proje|}}

              {{#ifCond proje.proje_kategorisi '==' 'Üretim'}}

              <div class="col-md-2">
                <li class="sticky-item animate__animated animate__rollIn">
                  <a href="/projeler/{{proje.id}}">
                    <i class="fa-solid fa-paperclip"></i>
                    <h2>{{proje.proje_ismi}}</h2>
                    <p class="project-category">{{proje.proje_kategorisi}}</p>
                  </a>
                </li>
              </div>


              {{/ifCond}}

              {{/each}}

            </ul>

            {{else}}

            <h5 class="text-white ms-2">Bu kullanıcı henüz proje kütüphanesine bir proje eklememiş.</h5>



            {{/if}}


          </div>
          <div class="tab-pane fade project-sticky-wrapper" id="pills-arge" role="tabpanel"
            aria-labelledby="pills-arge-tab" tabindex="0">

            {{#if unique_projeler}}

            <ul class="sticky-list">
              {{#each unique_projeler as |proje|}}

              {{#ifCond proje.proje_kategorisi '==' 'Arge'}}

              <div class="col-md-2">
                <li class="sticky-item wow rollIn">
                  <a href="/projeler/{{proje.id}}">
                    <i class="fa-solid fa-paperclip"></i>
                    <h2>{{proje.proje_ismi}}</h2>
                    <p class="project-category">{{proje.proje_kategorisi}}</p>
                  </a>
                </li>
              </div>


              {{/ifCond}}

              {{/each}}

            </ul>

            {{else}}

            <h5 class="text-white ms-2">Bu kullanıcı henüz proje kütüphanesine bir proje eklememiş.</h5>

            {{/if}}

          </div>
          <div class="tab-pane fade project-sticky-wrapper" id="pills-hizmet" role="tabpanel"
            aria-labelledby="pills-hizmet-tab" tabindex="0">


            {{#if unique_projeler}}

            <ul class="sticky-list">
              {{#each unique_projeler as |proje|}}

              {{#ifCond proje.proje_kategorisi '==' 'Hizmet'}}

              <div class="col-md-2">
                <li class="sticky-item wow rollIn">
                  <a href="/projeler/{{proje.id}}">
                    <i class="fa-solid fa-paperclip"></i>
                    <h2>{{proje.proje_ismi}}</h2>
                    <p class="project-category">{{proje.proje_kategorisi}}</p>
                  </a>
                </li>
              </div>


              {{/ifCond}}

              {{/each}}

            </ul>

            {{else}}

            <h5 class="text-white ms-2">Bu kullanıcı henüz proje kütüphanesine bir proje eklememiş.</h5>



            {{/if}}











          </div>
          <div class="tab-pane fade project-sticky-wrapper" id="pills-kss" role="tabpanel"
            aria-labelledby="pills-kss-tab" tabindex="0">

            {{#if unique_projeler}}

            <ul class="sticky-list">
              {{#each unique_projeler as |proje|}}

              {{#ifCond proje.proje_kategorisi '==' 'Kurumsal Sosyal Sorumluluk'}}

              <div class="col-md-2">
                <li class="sticky-item wow rollIn">
                  <a href="/projeler/{{proje.id}}">
                    <i class="fa-solid fa-paperclip"></i>
                    <h2>{{proje.proje_ismi}}</h2>
                    <p class="project-category">{{proje.proje_kategorisi}}</p>
                  </a>
                </li>
              </div>


              {{/ifCond}}

              {{/each}}

            </ul>

            {{else}}

            <h5 class="text-white ms-2">Bu kullanıcı henüz proje kütüphanesine bir proje eklememiş.</h5>



            {{/if}}








          </div>
          <div class="tab-pane fade project-sticky-wrapper" id="pills-all" role="tabpanel" aria-labelledby="pills-all"
            tabindex="0">

            {{#if unique_projeler}}

            <ul class="sticky-list">
              {{#each unique_projeler as |proje|}}


              <div class="col-md-2">
                <li class="sticky-item wow rollIn">
                  <a href="/projeler/{{proje.id}}">
                    <i class="fa-solid fa-paperclip"></i>
                    <h2>{{proje.proje_ismi}}</h2>
                    <p class="project-category">{{proje.proje_kategorisi}}</p>
                  </a>
                </li>
              </div>



              {{/each}}

            </ul>

            {{else}}

            <h5 class="text-white ms-2">Bu kullanıcı henüz proje kütüphanesine bir proje eklememiş.</h5>






            {{/if}}



          </div>
        </div>
      </div>

