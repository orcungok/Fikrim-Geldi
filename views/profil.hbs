  {{#each unique_user as |user|}}
  <section class="animate__animated animate__fadeInLeft" data-aos="fade-up" id="kullanıcı-şahsi-bilgileri">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-7 col-lg-4 mb-5 mb-lg-0 wow fadeIn">
          <div class="card border-0 shadow">
            <img src="../images/avatar_images/profile.png" alt="...">
            <div class="card-body p-1-9 p-xl-5">
              <div class="mb-4">
                <h3 class="h4 mb-0">{{user.NAME}} {{user.SURNAME}}</h3>
                <span class="text-primary">{{user.TITLE}}</span>
              </div>
